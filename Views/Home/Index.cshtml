@{
    ViewData["Title"] = "Index";
}

<script src="~/js/site.js"></script>

<div class="flexOrden">
    @foreach (var serie in ViewBag.Series)
    {
        <div class="card" style="width: 30rem;">
            <img src="@serie.ImagenSerie" class="card-img-top" alt="@serie.Nombre">
            <div class="card-body">
                <h5 class="card-title">@serie.Nombre</h5>
                <div class="row">
                    <div class="col-6 col-md-4"><button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#Modal" onclick="MostrarTemporadas(@serie.IdSerie)">Temporadas</button></div>
                    <div class="col-6 col-md-4"><button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#Modal" onclick="MostrarActores(@serie.IdSerie)">Actores</button></div>
                    <div class="col-6 col-md-4"><button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#Modal" onclick="MostrarInfo(@serie.IdSerie)">Más info</button></div>
                </div>
            </div>
        </div>
    }

    <div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="ModalLabel">Modal</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="ModalBody">
                <ul id="ModalList"></ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
            </div>
        </div>
    </div>
</div>